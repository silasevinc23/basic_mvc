@model basic_mvc.Models.CustomerOrderViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Customer Details</title>
</head>
<body>
    
    <h2>Customer Details</h2>
    <p><strong>Id:</strong> @Model.Customer.Id</p>
    <p><strong>First Name:</strong> @Model.Customer.FirstName</p>
    <p><strong>Last Name:</strong> @Model.Customer.LastName</p>
    <p><strong>Email:</strong> @Model.Customer.Email</p>

    <p><strong>Id:</strong> @Model.Order.Id</p>
    <p><strong>ProductName:</strong> @Model.Order.ProductName</p>
    <p><strong>Price:</strong> @Model.Order.Price</p>
    <p><strong>Quantity:</strong> @Model.Order.Quantity</p>


</body>
</html>


